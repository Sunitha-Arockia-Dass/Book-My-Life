<!-- Create a new profile Form-->
<div id="welcome-page">
  <div class="wrapper scroll-ok">
    <div class="left">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
        <g id="SVGRepo_iconCarrier">
          
          <path
            d="M17.8284 6.82843C18.4065 7.40649 18.6955 7.69552 18.8478 8.06306C19 8.4306 19 8.83935 19 9.65685L19 17C19 18.8856 19 19.8284 18.4142 20.4142C17.8284 21 16.8856 21 15 21H9C7.11438 21 6.17157 21 5.58579 20.4142C5 19.8284 5 18.8856 5 17L5 7C5 5.11438 5 4.17157 5.58579 3.58579C6.17157 3 7.11438 3 9 3H12.3431C13.1606 3 13.5694 3 13.9369 3.15224C14.3045 3.30448 14.5935 3.59351 15.1716 4.17157L17.8284 6.82843Z"
            stroke="#963696" stroke-width="2" stroke-linejoin="round"></path>
          <path d="M12 11L12 16" stroke="#ead94c" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          </path>
          <path d="M14.5 13.5L9.5 13.5" stroke="#ead94c" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round"></path>
        </g>
      </svg>
    </div>
    <div class="right">
      <div class="embed-page">
        <div id="vignette">
          <div id="v-container">
            <h2>Create a profile</h2>
            <form class="form-btn" action="/profile/profile" method="POST">

              <label>
                Name
                <input type="text" name="name" placeholder="Your name" />
              </label>
              <br /><br />

            <label>
              Birthdate
              <input type="date" name="dob" placeholder="mm/dd/yyyy" />
            </label>
            <br /><br />

              <label>
                Gender
                <select name="gender" id="gender">
                  <option value="female">Female</option>
                  <option value="male">Male</option>
                  <option value="other">Other</option>
                </select>
              </label>
              <br /><br />

              <label>
                Profile Picture
                <input type="text" name="profilePicture" placeholder="Your picture's url" />
              </label>
              <br /><br />

              <button type="submit"><span>Create</span></button>
              <br />

              <!-- Error message -->
              {{#if errorMessage}}
              <p class="error">{{errorMessage}}</p>
              {{/if}}

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>