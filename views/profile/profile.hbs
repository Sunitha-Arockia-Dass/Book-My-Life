<!-- PROFILE.s PAGE -->

<div id="welcome-page">
  <div class="wrapper">
    <div class="w-profile">
      <h2>Profile.s page</h2>
      <!-- Create a new profile -->
    
      <button>
        <a href="/profile/profileCreate">Create a profile</a>
      </button>
    
   
      <div class="embed-page">
        <!-- Display each profile -->
        {{#each profile}}
          <div>
            <a href="/profile/profileDetail/{{id}}">
              <img
                class="profile-picture"
                src="{{profilePicture}}"
                alt="error"
              />
              <h3>{{name}}</h3>

            </a>
            <button>
              <a href="/profile/profileUpdate/{{id}}">Update the profile</a>
            </button>
            <button>
              <a href="/profile/profileDelete/{{id}}">Delete the profile</a>
            </button>
          </div>
        {{/each}}
     
    </div>
  </div>
</div>


<!-- error message -->
{{#if errorMessage}}
  <p class="error">{{errorMessage}}</p>
{{/if}}